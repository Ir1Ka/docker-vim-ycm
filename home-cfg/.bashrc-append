# config for elixir
function elixir_env()
{
    export ELIXIR_ROOT=/opt/elixir
    export LXR_REPO_DIR=${ELIXIR_ROOT}/data/linux/repo
    export LXR_DATA_DIR=${ELIXIR_ROOT}/data/linux/data
}

